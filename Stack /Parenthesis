#include<stdio.h>
#include<string.h>
int validparanthesis(char s[])
{
	int count=0;
	for(int i=0; i<strlen(s); i++)
	{
		if(s[i]=='(')
		{
			count++;
		}
		else if(s[i]==')')
	   {
		   count--;
	   }

	   if (count<0)
	{
		return 0;
	}
	}
return count==0;
}
int main()
{
    char s[100];
    printf("enter the valid parenthesis string:");
    scanf("%s",s);
    if(validparanthesis(s))
    printf("valid paranthesis");
    else
    printf("invalid paranthesis");
    return 0;
}

